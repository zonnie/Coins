<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/background"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/huge_padding"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
        >
        <!-- Title -->

        <LinearLayout
            android:id="@+id/month_analytics_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_regualr"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/analytics_month_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_start_currency"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="@dimen/big_padding"
                android:paddingRight="@dimen/padding_start_currency"
                android:text="December"
                android:textColor="@android:color/white"
                android:textSize="@dimen/huge_font"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/analytics_year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="@dimen/padding_start_currency"
                android:paddingTop="@dimen/padding_start_currency"
                android:text="2014"
                android:textColor="@android:color/white"
                android:textSize="@dimen/huge_font"

                />
        </LinearLayout>



        <!-- General Analytics -->

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/month_analytics_date_layout"
            android:layout_marginLeft="@dimen/expense_drawable_left_pad"
            android:layout_marginRight="@dimen/expense_drawable_left_pad"
            />

        <!-- Top Category-->

        <LinearLayout
            android:id="@+id/month_analytics_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <FrameLayout
                android:id="@+id/analytics_monthly_top_category_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/padding_start_currency"
                android:layout_marginBottom="@dimen/padding_start_currency"
                android:layout_marginLeft="@dimen/expense_drawable_left_pad"
                />

            <FrameLayout
                android:id="@+id/analytics_monthly_top_category_graph"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/padding_start_currency"
                android:layout_marginBottom="@dimen/padding_start_currency"
                android:layout_marginLeft="@dimen/expense_drawable_left_pad"
                android:layout_marginRight="@dimen/expense_drawable_left_pad"
                />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>



