<!-- Title -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
    >

    <!-- Custom Action Bar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/month_analytics_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_regualr"
            android:orientation="horizontal"
            android:weightSum="6.3"
            >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="center"
                android:background="@drawable/back_regular_drawable"
                android:src="@drawable/back_2"
                android:onClick="onBackClicked"
                android:layout_weight="0.6"
                />

            <TextView
                android:id="@+id/analytics_month_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/chart_small"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="December"
                android:textColor="@android:color/white"
                android:textSize="@dimen/huge_font"
                android:textStyle="bold"
                android:layout_weight="2.5"
                />

            <TextView
                android:id="@+id/analytics_year_label"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="@dimen/padding_start_currency"
                android:paddingTop="@dimen/padding_start_currency"
                android:gravity="center_vertical"
                android:text="2014"
                android:textColor="@android:color/white"
                android:textSize="@dimen/huge_font"

                />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.moneyifyapp.activities.analytics.FullAnalyticsActivity"
            >

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pager_title_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/back_regualr"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:textColor="#fff"/>

        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>



