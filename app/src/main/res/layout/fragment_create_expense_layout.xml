<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center|top"
              android:padding="@dimen/big_padding"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addExpenseDescription"
        android:layout_gravity="center_horizontal"
        android:hint="What did you purchase"
        android:drawableLeft="@drawable/desc"
        android:drawablePadding="@dimen/expense_drawable_left_pad"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/addExpenseSum"
        android:drawableLeft="@drawable/sum"
        android:drawablePadding="@dimen/expense_drawable_left_pad"
        android:singleLine="true"
        android:hint="How much did it cost ?"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/addExpenseNotes"
        android:hint="Notes..."
        android:layout_marginTop="@dimen/big_padding"
        android:layout_marginBottom="@dimen/big_padding"
        android:drawableLeft="@drawable/notes"
        android:drawablePadding="@dimen/expense_drawable_left_pad"
        android:maxLength="40"
        android:lines="@integer/notes_lines"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button android:src="@drawable/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done !"
                android:id="@+id/submitButton"
                android:background="@drawable/button_regular"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_margin="@dimen/max_add_width"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/button_regular"
            android:id="@+id/cancelAddButton"
            android:layout_weight="1"
            android:layout_margin="@dimen/max_add_width"/>

    </LinearLayout>

</LinearLayout>