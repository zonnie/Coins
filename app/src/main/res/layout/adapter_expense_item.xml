<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/expense_drawable_left_pad"
    android:paddingBottom="@dimen/expense_drawable_left_pad">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/expenseDesc"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="@dimen/expense_drawable_left_pad"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="50"
        android:layout_weight="0.4"
        android:id="@+id/expenseValue"
        android:gravity="right"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$"
        android:id="@+id/currency"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/padding_start_currency"
        />

</LinearLayout>