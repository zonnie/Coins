<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/alternate_button_drawable"
              android:paddingBottom="@dimen/padding_start_currency"
              android:paddingStart="@dimen/big_padding"
              android:paddingTop="@dimen/padding_start_currency"
    >

    <LinearLayout
        android:id="@+id/drawer_child_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clipToPadding="false"
        >

        <ImageView
            android:id="@+id/drawer_child_item_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:src="@drawable/wallet"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.moneyifyapp.views.CondensedTextView
                android:id="@+id/drawer_child_item_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:paddingStart="@dimen/drawable_left_pad"
                android:text="Wallet"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_font"
                />

            <TextView
                android:id="@+id/drawer_child_item_note"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|start"
                android:paddingStart="@dimen/drawable_left_pad"
                android:text="Wallet"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tiny_font"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
