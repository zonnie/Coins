<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_regualr"
            android:orientation="vertical"
            android:paddingLeft="@dimen/big_padding"
            android:paddingRight="@dimen/big_padding"
            android:scrollbars="none"
            tools:context=".guide.fragments.WelcomeFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.moneyifyapp.views.CondensedTextView
            android:id="@+id/welcome_headline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/drawable_left_pad"
            android:text="Favorites"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mongo_font"
            android:textStyle="bold"
            />

        <com.moneyifyapp.views.ThinTextView
            android:id="@+id/welcome_main_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/welcome_sample_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_font"
            />

        <ImageView
            android:id="@+id/welcome_main_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="@dimen/large_font"
            android:src="@drawable/basic"
            />

        <com.moneyifyapp.views.ThinTextView
            android:id="@+id/welcome_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/padding_start_currency"
            android:text="Just tap the 'Favorite' to save this transaction for future use"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_font"
            />
    </LinearLayout>
</ScrollView>
