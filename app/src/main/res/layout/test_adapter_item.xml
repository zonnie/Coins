<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:showDividers="none"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/transaction_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/expense_card_margin"
            android:layout_marginLeft="@dimen/expense_drawable_left_pad"
            android:layout_marginRight="@dimen/expense_drawable_left_pad"
            android:layout_marginTop="@dimen/expense_drawable_left_pad"
            android:background="@drawable/expense_item_card"
            android:orientation="vertical"
            android:paddingBottom="@dimen/drawable_left_pad"
            android:paddingTop="@dimen/drawable_left_pad"
            android:showDividers="none"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/drawable_left_pad">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_container"
                        android:layout_width="@dimen/image_dimen"
                        android:layout_height="@dimen/image_dimen"
                        android:adjustViewBounds="true"
                        android:src="@drawable/drinks"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_start_currency"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/activity_vertical_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        >


                        <TextView
                            android:id="@+id/expenseDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            />

                        <TextView
                            android:id="@+id/currency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="right"
                            android:text="@string/default_currency"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/expenseValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/init_total_value"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/expenseItemNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/expense_drawable_left_pad"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/drawable_left_pad"
                        android:paddingEnd="@dimen/activity_vertical_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/drawable_left_pad"
                        android:text="@string/enter_note_hint"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/darker_gray"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>