<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/back_regualr"
              tools:context="com.moneyifyapp.guide.WelcomeActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Tutorial -->

        <FrameLayout
            android:id="@+id/tutorial_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            />

        <!-- Nav -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="6"
            >

            <ImageButton
                android:id="@+id/tutorial_prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="OnPrevClick"
                android:scaleType="fitCenter"
                android:src="@drawable/previous"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                />

            <ImageButton
                android:id="@+id/tutorial_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="OnNextClick"
                android:scaleType="fitCenter"
                android:src="@drawable/forward"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
