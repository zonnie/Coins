<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/item_root_layout"
    android:orientation="vertical"
    android:showDividers="none"
    android:background="@color/background"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/expense_drawable_left_pad"
        android:layout_marginRight="@dimen/expense_drawable_left_pad"
        android:id="@+id/transaction_card_layout"
        android:background="@drawable/expense_item_card_read"
        android:orientation="vertical"
        android:paddingBottom="@dimen/drawable_left_pad"
        android:paddingTop="@dimen/drawable_left_pad"
        android:showDividers="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/padding_start_currency"
            >


            <TextView
                android:id="@+id/expenseDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/expense_drawable_left_pad"
                android:text=""
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"/>

            <TextView
                android:id="@+id/currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center|right"
                android:maxLines="1"
                android:text="@string/default_currency"
                android:textStyle="bold"
                android:textSize="@dimen/large_font"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <TextView
                android:id="@+id/expenseValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:maxLines="1"
                android:text="@string/init_total_value"
                android:textSize="@dimen/large_font"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

        </LinearLayout>
    </LinearLayout>

    <!--</LinearLayout>-->
</LinearLayout>