<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BDBFBF"/>
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item android:bottom="1dp" >
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerX="78%"
                android:centerColor="#F3F5F5"
                android:startColor="#F3F5F5"
                android:endColor="#DCDEDE"
                android:type="linear"
                />
        </shape>
    </item>
</layer-list>