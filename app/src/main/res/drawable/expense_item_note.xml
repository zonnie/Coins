<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BBBD93"/>
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item android:bottom="1dp" >
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerX="93%"
                android:centerColor="#F8FAE3"
                android:startColor="#F8FAE3"
                android:endColor="#D4D6A7"
                android:type="linear"
                />
        </shape>
    </item>
</layer-list>